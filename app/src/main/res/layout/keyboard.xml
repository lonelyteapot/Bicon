<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4">

    <Button
        android:id="@+id/key7"
        style="@style/KeyboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7" />

    <Button
        android:id="@+id/key8"
        style="@style/KeyboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8" />

    <Button
        android:id="@+id/key9"
        style="@style/KeyboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9" />

    <Button
        android:id="@+id/keyBackspace"
        style="@style/KeyboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowSpan="1"
        android:layout_gravity="fill"
        android:text="⟵" />

    <Button
        android:id="@+id/key4"
        style="@style/KeyboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4" />

    <Button
        android:id="@+id/key5"
        style="@style/KeyboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5" />

    <Button
        android:id="@+id/key6"
        style="@style/KeyboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6" />

    <Button
        android:id="@+id/keyEnter"
        style="@style/KeyboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowSpan="1"
        android:layout_gravity="fill"
        android:text="✓" />

    <Button
        android:id="@+id/key1"
        style="@style/KeyboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1" />

    <Button
        android:id="@+id/key2"
        style="@style/KeyboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2" />

    <Button
        android:id="@+id/key3"
        style="@style/KeyboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3" />

    <Button
        android:id="@+id/key0"
        style="@style/KeyboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />

</GridLayout>