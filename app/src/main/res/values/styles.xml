<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HorizontalDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#3000</item>
    </style>
    <style name="NumericEditText" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">number</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">46sp</item>
        <item name="android:minEms">3</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="DateEditText" parent="NumericEditText">
        <item name="android:inputType">date</item>
        <item name="android:maxEms">4</item>
    </style>
    <style name="Label" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
    </style>
</resources>