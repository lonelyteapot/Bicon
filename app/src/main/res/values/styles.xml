<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumericEditText" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">number</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">46sp</item>
        <item name="android:minEms">3</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="DateEditText" parent="NumericEditText">
        <item name="android:inputType">date</item>
        <item name="android:maxLength">8</item>
    </style>
    <style name="NonEditableEditText" parent="NumericEditText">
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>
    <style name="Label" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
    </style>
</resources>